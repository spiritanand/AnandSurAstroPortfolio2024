---
import Card from "./Card/index.astro";
import Button from "./Button.astro";
import { LINKS } from "../lib/constants";
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
import me from "../assets/me.png";
import Content from "./Card/Content.astro";
---

<Card colSpan="md:col-span-3" rowSpan="md:row-span-4">
  <div class="flex w-full h-full">
    <div class="flex flex-1 flex-col justify-between md:max-h-[300px] gap-4">
      <div class="flex flex-col h-full">
        <h6 class="text-sm font-light m-0 text-gray-500">namaste üôè</h6>
        <p class="m-0 font-light text-xl">
          I'm <b class="font-bold">Suryansh Anand</b>, bringing ideas to life through full-stack
          development. Learning and building in public, one app at a time.
        </p>

        <span class="relative mt-4 w-fit flex items-center gap-2">
          <a
            href="https://youtu.be/3c-7qs0zFJs"
            class="block peer text-sm font-black"
            target="_blank"
            rel="noopener noreferrer"
          >
            Know More
          </a>
          <Icon
            name="ri:arrow-right-up-line"
            class="h-6 text-white peer-hover:opacity-100 peer-hover:text-primary-500 peer-hover:translate-x-1 peer-hover:-translate-y-1 transition-all ease-in-out duration-100 z-20"
          />
        </span>
      </div>
      <div class="flex gap-4 flex-wrap">
        <a href={LINKS.github} aria-label="github profile" target="_blank">
          <Button aria-label="github profile">
            <Icon name="ri:github-fill" class="h-6" />
            <span class="sr-only">GitHub Profile</span>
          </Button>
        </a>
        <a href={LINKS.x} aria-label="x profile" target="_blank">
          <Button aria-label="x profile">
            <Icon name="ri:twitter-fill" class="h-6" />
            <span class="sr-only">Twitter/X</span>
          </Button>
        </a>
        <a href={LINKS.youtube} aria-label="youtube profile" target="_blank">
          <Button aria-label="youtube profile">
            <Icon name="ri:youtube-fill" class="h-6" />
            <span class="sr-only">YouTube</span>
          </Button>
        </a>
        <a href={LINKS.email} aria-label="email" target="_blank">
          <Button aria-label="email">
            <Icon name="ri:mail-fill" class="h-6" />
            <span class="sr-only">Email</span>
          </Button>
        </a>
        <a href={LINKS.resume} aria-label="resume" target="_blank">
          <Button aria-label="resume">
            <Icon name="ri:file-pdf-fill" class="h-6" />
            <span class="sr-only">Resume</span>
          </Button>
        </a>
      </div>
    </div>
    <Image
      src={me}
      width={1920}
      height={1080}
      loading="eager"
      class="w-auto max-h-[300px] max-w-[300px] select-none absolute right-[-110px] bottom-[-20px] z-[-1] opacity-50 md:opacity-100 md:relative md:right-auto md:bottom-auto md:z-auto pointer-events-none object-contain"
      alt="anime anand"
    />
  </div>
</Card>
